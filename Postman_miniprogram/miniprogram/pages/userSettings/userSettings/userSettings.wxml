<!--pages/userSettings/userSettings.wxml-->
<view id="settings">
    <view class="cu-bar bg solid-bottom padding-left-xs">
        <view class="action">
            <text class="cuIcon-title text-orange"></text>帮助
        </view>
    </view>
    <view class="cu-list menu sm-border card-menu">
        <view class="cu-item arrow">
            <navigator class="content" hover-class="none" url="/pages/userSettings/aboutUs/aboutUs" open-type="navigate">
                <text class="cuIcon-discoverfill text-orange"></text>
                <text class="text-grey">关于我们</text>
            </navigator>
        </view>
        <view class="cu-item arrow">
            <navigator class="content" hover-class="none" url="/pages/userSettings/funIntroduction/funIntroduction" open-type="navigate">
                <text class="cuIcon-discoverfill text-orange"></text>
                <text class="text-grey">功能介绍</text>
            </navigator>
        </view>
        <view class="cu-item arrow">
            <button class="cu-btn content" open-type="contact" bindcontact="handleContact" >
                <text class="cuIcon-btn text-olive"></text>
                <text class="text-grey">联系客服</text>
            </button>
        </view>
    </view>

    <view class="cu-list menu card-menu">
        <view class=" flex flex-direction margin-top-sm">
            <button class="cu-btn bg-red lg" bindtap="exit">退出</button>
        </view>
        <view class=" flex flex-direction margin-top-sm">
            <button open-type="feedback" class="cu-btn lg" bindtap="handleEdit">反馈</button>
        </view>
    </view>
</view>
