<!--pages/editUserInfo/editUserInfo.wxml-->
<view id="editUserInfo">
    <view class="main margin-top-lg">
        <view class="cu-form-group top" id="top">
            <view class="title">用户昵称</view>
            <input type="nickname" model:value="{{nickname}}" bind:input="printInput" placeholder="请输入昵称" maxlength="20"></input>
        </view>
        <view class="cu-form-group">
            <view class="title">性别</view>
            <picker model:value="{{gender}}" range="{{picker}}" bindchange="PickerChange">
                <view class="picker">
                    {{gender!==null?picker[gender]:'请选择性别'}}
                </view>
            </picker>
        </view>
        <view class="cu-form-group">
            <view class="title">手机号码</view>
            <input type="number" model:value="{{phoneNumber}}" bind:input="printInput" placeholder="请输入手机号" maxlength="11"></input>
            <view class="cu-capsule radius">
                <view class="cu-tag bg-blue">
                    +86
                </view>
                <view class="cu-tag line-blue">
                    中国大陆
                </view>
            </view>
        </view>
        <view class="cu-form-group">
            <view class="title">地址选择</view>
            <picker mode="region" bindchange="RegionChange" value="{{region}}" custom-item="{{customItem}}">
                <view class="picker">
                    {{region[0]}}，{{region[1]}}，{{region[2]}}
                </view>
            </picker>
        </view>
        <view class="cu-form-group" id="bottom">
            <view class="title">详细地址</view>
            <input model:value="{{detailAddress}}" bind:input="printInput" placeholder="请输入详细地址" maxlength="50"></input>
        </view>
        <view class="padding flex flex-direction">
            <button class="cu-btn bg-blue lg" bindtap="handleEdit">提交</button>
        </view>
    </view>
</view>
