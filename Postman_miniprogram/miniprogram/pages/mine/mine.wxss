/* pages/mine/mine.wxss */
#mine {
  height: 100vh;
  width: 100vw;
  background-color: #fae3cb;
}

.right-icon {
  width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  font-size: 40rpx;
}


.user-card {
  display: flex;
  justify-content: space-between;
}

.avatar-box {
  display: flex;
}

.phoneNumber {
  padding-top: 15rpx;
  padding-bottom: 0;
}

.border-radius-20 {
  border-radius: 20rpx;
}

.nickname {
  text-align: left;
  padding-left: 30rpx;
}

.br-r {
  border-radius: 20rpx;
}

button::after {
  border: none;
  background-color: none;
}

button{
  width: 100%;
  background-color: white;
  border: none;
  padding: 0px;
  margin: 0px;
  line-height: normal;
}
/* 去除边框 */
button::after{
  border: none;
  border-radius: 0;
}
