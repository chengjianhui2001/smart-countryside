<view class="cu-list menu border padding shadow-lg">
    <view class="cu-item"
          style="border-top-left-radius:20rpx;border-top-right-radius:20rpx;">
        <view class="content">
            <text class="text-black">昵称</text>
        </view>
        <view class="action">
            <text class="text-grey text-lg">{{userInfo.nickName===undefined?'未知':userInfo.nickName}}</text>
        </view>
    </view>
    <view class="cu-item">
        <view class="content">
            <text class="text-black">性别</text>
        </view>
        <view class="action">
            <text class="text-grey text-lg">{{userInfo.gender===0||userInfo.gender===undefined?'未知':userInfo.gender===1?'男':'女'}}</text>
        </view>
    </view>
    <view class="cu-item">
        <view class="content">
            <text class="text-black">手机号</text>
        </view>
        <view class="action">
            <text class="text-grey text-lg">{{(userInfo.phoneNumber===''||userInfo.phoneNumber===null||userInfo.phoneNumber===undefined)?'未知':userInfo.phoneNumber}}</text>
        </view>
    </view>
    <view class="cu-item">
        <view class="content">
            <text class="text-black">地区</text>
        </view>
        <view class="action">
            <text class="text-grey text-lg">{{(userInfo.city===null||userInfo.city===''||userInfo.city===undefined)?'未知':userInfo.province+' '+userInfo.city+' '+userInfo.district}}</text>
        </view>
    </view>
    <view class="cu-item" style="border-bottom-left-radius:20rpx;border-bottom-right-radius:20rpx;">
        <view class="content">
            <text class="text-black">详细地址</text>
        </view>
        <view class="action">
            <text class="text-grey text-lg">{{(userInfo.detailAddress===null||userInfo.detailAddress===''||userInfo.detailAddress===undefined)?'未知':userInfo.detailAddress}}</text>
        </view>
    </view>
</view>

<view class="padding flex justify-around align-center">
    <navigator url="/pages/mine/user/editUserInfo/editUserInfo" hover-class="none">
        <view class="flex flex-direction">
            <button class="cu-btn bg-green lg" style="width:300rpx">编辑</button>
        </view>
    </navigator>
    <view class=" flex flex-direction">
        <button class="cu-btn bg-red lg" bindtap="exit" style="width:300rpx">退出</button>
    </view>
</view>

